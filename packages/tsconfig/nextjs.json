{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Next.js",
    "extends": "./base.json",
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "ES6"
        ],
        "target": "ES5",
        "allowJs": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "src",
        "next-env.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}