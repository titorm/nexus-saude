{
  "name": "@nexus-saude/monitoring-service",
  "version": "1.0.0",
  "description": "Real-time monitoring service for Nexus Sa√∫de healthcare platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t nexus-monitoring .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f monitoring",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "monitoring",
    "healthcare",
    "real-time",
    "alerts",
    "dashboard",
    "metrics",
    "performance"
  ],
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/redis": "^7.0.1",
    "@fastify/websocket": "^11.0.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.6.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.5",
    "prometheus-gc-stats": "^0.6.4",
    "systeminformation": "^5.23.5",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nexus/eslint-config": "workspace:*",
    "@nexus/tsconfig": "workspace:*",
    "@types/node": "^22.18.6",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.19",
    "@types/ws": "^8.5.13",
    "eslint": "^9.16.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "type": "module"
}