# NLP Service Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=3007
HOST=0.0.0.0

# API Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
API_TIMEOUT=30000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nexus_saude
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=5000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# NLP Model Configuration
SPACY_MODEL=en_core_web_sm
SPACY_COMPONENTS=ner,parser,tagger
SPACY_MAX_LENGTH=1000000

# Transformers Configuration
TRANSFORMERS_CACHE=./models
TRANSFORMERS_DEVICE=cpu
TRANSFORMERS_MAX_TOKENS=512

# Clinical Data Paths
CLINICAL_VOCAB_PATH=./data/clinical_vocab.json
CLINICAL_ABBREV_PATH=./data/medical_abbreviations.json
ICD10_PATH=./data/icd10_codes.json
SNOMED_PATH=./data/snomed_codes.json

# Processing Configuration
MAX_TEXT_LENGTH=50000
BATCH_SIZE=10
CONCURRENT_PROCESSES=5
TIMEOUT_PER_DOCUMENT=30000

# Classification Configuration
CLASSIFICATION_CONFIDENCE=0.7
DOCUMENT_TYPES=clinical_note,discharge_summary,lab_report,radiology_report,pathology_report,consultation_note,operative_note,progress_note,history_physical,emergency_note,prescription,referral_letter

# Entity Extraction Configuration
MEDICAL_ENTITIES=medication,condition,procedure,anatomy,symptom,dosage,frequency,duration,allergy,lab_value
ENTITY_CONFIDENCE=0.6
ENABLE_ENTITY_NORMALIZATION=true

# Summarization Configuration
MAX_SUMMARY_LENGTH=500
MIN_SUMMARY_LENGTH=50
EXTRACTIVE_RATIO=0.3
KEYWORD_DENSITY=0.1

# Structured Extraction Configuration
STRUCTURED_FIELDS=patient_name,patient_age,diagnosis,medications,allergies,vital_signs,lab_results,procedures,recommendations,follow_up,chief_complaint,history_present_illness
STRUCTURED_CONFIDENCE=0.8

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9464
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_LOGGING=true

# Security Configuration
ENCRYPTION_KEY=your-encryption-key-change-in-production
HASH_ROUNDS=12
ENABLE_IP_FILTERING=false
ALLOWED_IPS=

# HIPAA Compliance Configuration
HIPAA_AUDIT_LOGGING=true
HIPAA_DATA_RETENTION=2555
HIPAA_ENCRYPTION=true
HIPAA_ANONYMIZE=true

# Logging Configuration
LOG_LEVEL=debug