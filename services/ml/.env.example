# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/nexus_ml
REDIS_URL=redis://localhost:6379/0

# ML Configuration
MODEL_PATH=./data/models
FEATURE_STORE_PATH=./data/processed
TRAINING_DATA_PATH=./data/raw
ML_EXPERIMENT_TRACKING=mlflow
MLFLOW_TRACKING_URI=http://localhost:5000

# Model Performance Thresholds
ACCURACY_THRESHOLD=0.85
PRECISION_THRESHOLD=0.80
RECALL_THRESHOLD=0.85
CONFIDENCE_THRESHOLD=0.70
DRIFT_DETECTION_THRESHOLD=0.05

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/ml-service.log

# Cache Configuration
CACHE_TTL=3600
PREDICTION_CACHE_SIZE=1000

# Model Training
TRAIN_TEST_SPLIT=0.8
VALIDATION_SPLIT=0.2
RANDOM_SEED=42
MAX_TRAINING_TIME=3600

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Feature Engineering
FEATURE_SELECTION_THRESHOLD=0.01
FEATURE_SCALING_METHOD=standard
HANDLE_MISSING_VALUES=median

# Medical Compliance
ANONYMIZE_PATIENT_DATA=true
AUDIT_PREDICTIONS=true
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=true

# Performance
MAX_CONCURRENT_PREDICTIONS=100
PREDICTION_TIMEOUT=30
BATCH_SIZE=32
GPU_ENABLED=false

# Development
DEBUG=true
RELOAD_MODELS_ON_CHANGE=true
SAVE_PREDICTION_LOGS=true